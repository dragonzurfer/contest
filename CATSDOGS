#include<bits/stdc++.h>
using namespace std;
typedef long long ll;

int main()
{
        ll minlegs,maxlegs,c,d,l,n;
        cin>>n;
        while(n--)
        {
          cin>>c>>d>>l;
          maxlegs=4*(c+d);
          minlegs=4*d;
          if(l%4||l>maxlegs)
            cout<<"no";
          else
          {
                if(c>2*d)
                        minlegs=4*(c-d);
                if(l>=minlegs&&l<=maxlegs)
                        cout<<"yes",continue;
                        cout<<"no";
          }
          cout<<endl;

        }
        return 0;
}
